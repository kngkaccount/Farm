<Window x:Class="Farm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farm"
        mc:Ignorable="d"
        Title="Главное меню" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/images/farm.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <StackPanel>
            <TextBlock Text="Farm" TextDecorations="Underline" FontStyle="Italic"  FontSize="30" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="ИС для планирования и мониторинга сельскохозяйственных работ" Foreground="White" HorizontalAlignment="Center" FontSize="15"></TextBlock>
            <Separator Margin=" 0 10 0 0"></Separator>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Margin="0 60 0 0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Button Width="500" Height="40" Margin="0 10 0 0" Click="Button_Click" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/fields.png" Height="32"></Image>
                        <TextBlock FontSize="18" Text="Поля" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Width="500" Height="40" Margin="0 10 0 0" Click="Button_Click_1" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/growing-seed.png" Height="32"></Image>
                        <TextBlock FontSize="18" Text="Семена" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Width="500" Height="40"  Margin="0 10 0 0" Click="Button_Click_2" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/tractor.png" Height="32"></Image>
                        <TextBlock FontSize="18" Text="Техника" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Width="500" Height="40" Margin="0 10 0 0" Click="Button_Click_3" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/planning.png" Height="32"></Image>
                        <TextBlock FontSize="18" Text="Планы" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Width="500" Height="40" Margin="0 10 0 0" Click="Button_Click_4" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/sun.png" Height="32"></Image>
                        <TextBlock FontSize="18" Text="Прогнозы погоды" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Width="500" Height="40"  Margin="0 10 0 0" Click="Button_Click_5" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/harvest.png" Height="32"></Image>
                        <TextBlock FontSize="18" Text="Урожаи" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
