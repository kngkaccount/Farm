<Window x:Class="Farm.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farm"
        mc:Ignorable="d"
               Title="Auth" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Farm" FontSize="24" FontWeight="Bold" FontStyle="Italic" TextDecorations="Underline" HorizontalAlignment="Center"></TextBlock>
                <StackPanel>
                    <TextBlock Text="Вход в приложение" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"></TextBlock>
                </StackPanel>
                <Separator></Separator>
            </StackPanel>
            <StackPanel Width="320" Margin="0 10 0 0">

                <StackPanel Margin="0 0 0 5">
                    <TextBlock Text="Номер телефона" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    <TextBox x:Name="phoneBox" FontSize="16" VerticalContentAlignment="Center" Height="36"></TextBox>
                </StackPanel>
                <StackPanel Margin="0 5 0 0">
                    <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    <PasswordBox x:Name="passwordBox" FontSize="16" Height="36" VerticalContentAlignment="Center"></PasswordBox>
                </StackPanel>
                <Button Margin="0 20 0 0" Height="30" FontWeight="Bold" FontSize="16" Cursor="Hand" Click="Button_Click">Войти</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
