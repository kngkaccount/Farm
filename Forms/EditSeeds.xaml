<Window x:Class="Farm.Forms.EditSeeds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farm.Forms"
        mc:Ignorable="d"
        Title="Редактирование данных семян" Height="420" Width="345">
    <Grid>
        <StackPanel Background="#A0A0A0">
            <StackPanel Height="50">
                <Grid VerticalAlignment="Bottom" Height="50" Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />

                    </Grid.ColumnDefinitions>
                    <Button Content="Назад" Width="80" Height="35" FontSize="16" Margin="5 0 0 0" Grid.Column="0" Click="Button_Click"/>
                    <StackPanel Margin="0 0 10 0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="Изменить данные семян" FontSize="18" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel Margin="0 20 0 0" Background="LightGray" Height="260" Width="300">
                <StackPanel Margin="0 10 0 0">
                    <TextBlock Text="Название" FontSize="18" FontStyle="Italic" HorizontalAlignment="Center"></TextBlock>
                    <TextBox x:Name="nameBox" Height="36" FontSize="18" Margin="15 5 15 0"  VerticalContentAlignment="Center"></TextBox>
                </StackPanel>
                <StackPanel Margin="0 10 0 0">
                    <TextBlock Text="Вес (кг)" FontSize="18" FontStyle="Italic" HorizontalAlignment="Center"></TextBlock>
                    <TextBox x:Name="weightBox" Height="36" FontSize="18" Margin="15 5 15 0" VerticalContentAlignment="Center"></TextBox>
                </StackPanel>
                <Button Content="Обновить" Width="100" Height="36" FontSize="16" Background="#007bff" Foreground="White" Margin="0 40 0 0" Cursor="Hand" Click="Button_Click_1"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>