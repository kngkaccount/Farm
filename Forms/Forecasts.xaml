<Window x:Class="Farm.Forms.Forecasts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farm.Forms"
        mc:Ignorable="d"
        Title="Прогнозы погоды" Height="400" Width="400">
    <Grid>
        <StackPanel Background="#A0A0A0">
            <StackPanel Height="50">
                <Grid Margin="0 0 0 20" VerticalAlignment="Bottom" Height="50" Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />

                    </Grid.ColumnDefinitions>
                    <Button Content="Назад" Width="80" Height="35" FontSize="16" Margin="5 0 0 0" Grid.Column="0" Click="Button_Click"/>
                    <StackPanel Margin="0 0 30 0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Source="/images/sun.png" Height="32" Margin="0 0 5 0"></Image>
                        <TextBlock Text="Прогнозы погоды" FontSize="26" FontWeight="Bold"></TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel Margin="0 15 0 10">
                <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" FontSize="18" Background="Transparent">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header = "#" Width="70" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header = "Описание" Width="140" Binding="{Binding Description}"/>
                        <DataGridTextColumn Header = "Дата" Width="160" Binding="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>


        </StackPanel>

        <StackPanel Margin="0 0 0 20" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Добавить" Width="90" Height="35" FontSize="16" Margin="0 0 10 0" HorizontalAlignment="Center" Cursor="Hand" Click="Button_Click_1"/>
            <Button Content="Изменить" Width="90" Height="35" FontSize="16" Margin="0 0 10 0" HorizontalAlignment="Center" Cursor="Hand" Click="Button_Click_2"/>
            <Button Content="Удалить" Width="90" Height="35" FontSize="16" Margin="0 0 10 0" HorizontalAlignment="Center" Cursor="Hand" Click="Button_Click_3"/>
        </StackPanel>



    </Grid>
</Window>
